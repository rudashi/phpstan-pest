{
    "name": "rudashi/phpstan-pest",
    "description": "Pest-php plugin for PHPStan",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "phpstan"
    ],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Borys Å»muda",
            "email": "rudashi@gmail.com",
            "homepage": "https://rudashi.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "orchestra/testbench": "^9.9.0 || ^10.0.0",
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Rudashi\\PHPStan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rudashi\\PHPStan\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "scripts": {
        "test:lint": "pint --test -vvv",
        "test:types": "phpstan analyse --ansi",
        "test:arch": "pest --filter=arch",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:arch",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
